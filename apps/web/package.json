    "@types/pdf-parse": "^1.1.5",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.2",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "openai": "^5.16.0",
    "pdf-parse": "^1.1.1",
